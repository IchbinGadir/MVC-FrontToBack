@using ProniaA.Areas.Admin.ViewModels.Slide
@model GetSlideVM
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Slide Details</h6>
            <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="border rounded p-2 text-center">
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="~/assets/images/website-images/@Model.Image"
                                 class="img-fluid rounded"
                                 alt="@Model.Title"
                                 style="max-height: 400px;">
                        }
                        else
                        {
                            <span class="text-muted">Şəkil yoxdur</span>
                        }
                    </div>
                </div>

                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="bg-light" style="width: 30%">Title</th>
                                <td>@Model.Title</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Description</th>
                                <td>@Model.Description</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
